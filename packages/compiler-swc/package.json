{
  "name": "@shuvi/compiler-swc",
  "version": "1.0.0-rc.3",
  "private": true,
  "scripts": {
    "build-native": "napi build --platform --cargo-name shuvi_swc_napi --cargo-name shuvi_swc_napi native --features plugin",
    "build-native-no-plugin": "napi build --platform -p shuvi-swc-napi --cargo-name shuvi_swc_napi native",
    "publish-native": "node scripts/publish-native.js"
  },
  "dependencies": {
    "@napi-rs/cli": "2.4.4"
  },
  "napi": {
    "name": "shuvi-swc",
    "triples": {
      "defaults": true,
      "additional": [
        "i686-pc-windows-msvc",
        "aarch64-unknown-linux-gnu",
        "armv7-unknown-linux-gnueabihf",
        "aarch64-apple-darwin",
        "x86_64-unknown-freebsd",
        "x86_64-unknown-linux-musl",
        "aarch64-unknown-linux-musl",
        "aarch64-pc-windows-msvc"
      ]
    }
  }
}
