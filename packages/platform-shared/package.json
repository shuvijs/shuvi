{
  "name": "@shuvi/platform-shared",
  "version": "0.0.1-pre.10",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shuvijs/shuvi.git",
    "directory": "packages/core"
  },
  "author": "liximomo",
  "license": "MIT",
  "sideEffects": false,
  "main": "lib/index.js",
  "module": "esm/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib",
    "esm",
    "template"
  ],
  "scripts": {
    "dev": "run-p watch:*",
    "watch:esm": "tsc -p tsconfig.build.json -m esnext --outDir esm -w",
    "watch:cjs": "tsc -p tsconfig.build.json -m commonjs --outDir lib -w",
    "prebuild": "rimraf lib esm",
    "build": "run-p build:*",
    "build:esm": "tsc -p tsconfig.build.json -m esnext --outDir esm",
    "build:cjs": "tsc -p tsconfig.build.json -m commonjs --outDir lib"
  },
  "engines": {
    "node": ">= 12.0.0"
  },
  "dependencies": {
    "redux": "4.1.2",
    "@shuvi/redox": "0.0.1-pre.6",
    "@shuvi/hook": "0.0.1-pre.10",
    "@shuvi/service": "0.0.1-pre.10",
    "@shuvi/toolpack": "0.0.1-pre.10",
    "@shuvi/router": "0.0.1-pre.10",
    "@shuvi/runtime": "0.0.1-pre.10",
    "@shuvi/shared": "0.0.1-pre.10",
    "@shuvi/utils": "0.0.1-pre.10"
  }
}
