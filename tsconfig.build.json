{
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "target": "es6",
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "stripInternal": true,
    "downlevelIteration": true,
    "noUnusedLocals": true,
    "declaration": true
  },
  "exclude": [
    "test/e2e",
    "test/packages",
    "test/fixtures",
    "**/__tests__",
    "**/*.test.ts?(x)"
  ]
}
