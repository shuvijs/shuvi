{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@shuvi/runtime": [".shuvi/runtime"],
      "@shuvi/runtime/*": [".shuvi/runtime/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src", ".shuvi/app/types-plugin-extended.d.ts"]
}
