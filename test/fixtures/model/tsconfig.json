{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "esnext",
    "jsx": "preserve",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@shuvi/runtime": [".shuvi/runtime"],
      "@shuvi/runtime/*": [".shuvi/runtime/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
