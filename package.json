{
  "name": "shuvi-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shuvijs/shuvi.git"
  },
  "scripts": {
    "dev": "pnpm -r run dev--stream --parallel",
    "build": "pnpm -r run build",
    "clean": "pnpm -r --parallel exec rm -rf node_modules lib esm shuvi-app && pnpm exec rm -rf node_modules",
    "shuvi": "node ./packages/shuvi/bin/cli.js",
    "jest": "jest",
    "test": "pnpm test:fixtures && pnpm test:unit",
    "test:unit": "jest packages",
    "test:fixtures": "jest test/fixtures",
    "test:e2e": "cd test && pnpm test",
    "release": "pnpm clean && pnpm i && pnpm build && pnpm test && pnpm changeset publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "devDependencies": {
    "@testing-library/react": "^10.0.2",
    "@types/fs-extra": "^8.1.0",
    "@types/jest": "^25.1.3",
    "@types/puppeteer-core": "^2.0.0",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "@types/react-test-renderer": "^16.9.2",
    "@types/send": "^0.14.5",
    "@types/testing-library__react": "^10.0.1",
    "cross-spawn": "^7.0.2",
    "get-port": "^5.1.1",
    "got": "^10.7.0",
    "husky": "^4.2.3",
    "is-wsl": "^2.1.1",
    "jest": "^25.3.0",
    "lint-staged": "^10.1.2",
    "lodash": "^4.17.15",
    "memfs": "^3.1.2",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "puppeteer-core": "4.0.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.3.1",
    "typescript": "3.8.3"
  }
}
