{
  "name": "shuvi",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shuvijs/shuvi.git"
  },
  "scripts": {
    "dev": "pnpm -r --stream --parallel --filter ./packages run dev ",
    "build": "pnpm -r --filter ./packages run build",
    "clean": "pnpm -r --parallel exec rm -rf node_modules lib esm shuvi-app && pnpm exec rm -rf node_modules",
    "shuvi": "node ./packages/shuvi/bin/cli.js",
    "jest": "jest",
    "test": "pnpm test:fixtures && pnpm test:unit",
    "test:unit": "jest packages",
    "test:fixtures": "jest test/fixtures",
    "test:e2e": "cd test && pnpm test",
    "test:e2e:express": "NODE_SERVER=EXPRESS jest test/e2e/basic --runInBand && NODE_ENV=production NODE_SERVER=EXPRESS jest test/e2e/basic --runInBand",
    "test:e2e:koa": "NODE_SERVER=KOA jest test/e2e/basic --runInBand && NODE_ENV=production NODE_SERVER=KOA jest test/e2e/basic --runInBand",
    "postinstall": "node scripts/install-native.js",
    "docs": "node scripts/typedoc-to-markdown.js",
    "release": "pnpm clean && pnpm i && pnpm build && pnpm test && pnpm changeset publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.21.0",
    "@types/fs-extra": "^8.1.0",
    "@types/jest": "^25.1.3",
    "@types/puppeteer-core": "^2.0.0",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "@types/react-test-renderer": "^16.9.2",
    "@types/rimraf": "^3.0.0",
    "@types/send": "^0.14.5",
    "@types/testing-library__react": "^10.0.1",
    "cross-spawn": "^7.0.2",
    "express": "^4.17.1",
    "get-port": "^5.1.1",
    "got": "^10.7.0",
    "husky": "^4.2.3",
    "is-wsl": "^2.1.1",
    "jest": "26.6.3",
    "koa": "^2.13.1",
    "lint-staged": "^10.1.2",
    "lodash": "^4.17.15",
    "memfs": "^3.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "puppeteer-core": "4.0.1",
    "rimraf": "^3.0.2",
    "sass": "1.50.1",
    "ts-jest": "26.5.6",
    "typedoc": "^0.22.15",
    "typedoc-plugin-markdown": "^3.12.1",
    "typedoc-plugin-mdn-links": "^1.0.6",
    "typescript": "^4.5.2"
  },
  "resolutions": {
    "@babel/types": "7.12.11"
  }
}
