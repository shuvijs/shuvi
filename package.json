{
  "name": "shuvi",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shuvijs/shuvi.git"
  },
  "engines": {
    "node": ">=16",
    "pnpm": "=7"
  },
  "scripts": {
    "dev": "pnpm -r --stream --parallel run dev",
    "build": "pnpm -r run build",
    "clean": "pnpm -r --parallel exec rm -rf node_modules lib esm shuvi-app && pnpm exec rm -rf node_modules",
    "shuvi": "node ./packages/shuvi/bin/cli.js",
    "jest": "jest",
    "test": "pnpm test:unit && pnpm test:e2e",
    "test:unit": "jest ./packages",
    "test:e2e": "NODE_OPTIONS=--max_old_space_size=4096 jest --filter ./scripts/filter-e2e.js --runInBand",
    "test:e2e:express": "NODE_SERVER=EXPRESS jest test/e2e/basic --runInBand && NODE_ENV=production NODE_SERVER=EXPRESS jest test/e2e/basic --runInBand",
    "test:e2e:koa": "NODE_SERVER=KOA jest test/e2e/basic --runInBand && NODE_ENV=production NODE_SERVER=KOA jest test/e2e/basic --runInBand",
    "postinstall": "node scripts/install-native.js",
    "docs": "node scripts/typedoc-to-markdown.js",
    "release": "pnpm clean && pnpm i && pnpm build && pnpm test && pnpm changeset publish",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.21.0",
    "@types/fs-extra": "^8.1.0",
    "@types/jest": "^25.1.3",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.5",
    "@types/react-test-renderer": "^16.9.2",
    "@types/rimraf": "^3.0.0",
    "@types/send": "^0.14.5",
    "@types/testing-library__react": "^10.0.1",
    "@types/webpack-env": "^1.16.2",
    "cross-spawn": "^7.0.2",
    "express": "^4.17.1",
    "get-port": "^5.1.1",
    "got": "^10.7.0",
    "husky": "^8.0.1",
    "is-wsl": "^2.1.1",
    "jest": "26.6.3",
    "koa": "^2.13.1",
    "lint-staged": "^10.1.2",
    "lodash": "^4.17.15",
    "memfs": "^3.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "puppeteer-core": "14.1.2",
    "rimraf": "^3.0.2",
    "sass": "1.50.1",
    "ts-jest": "26.5.6",
    "typedoc": "^0.22.15",
    "typedoc-plugin-markdown": "^3.12.1",
    "typedoc-plugin-missing-exports": "^0.22.6",
    "typescript": "^4.5.2"
  },
  "pnpm": {
    "packageExtensions": {
      "fork-ts-checker-webpack-plugin": {
        "peerDependenciesMeta": {
          "typescript": {
            "optional": true
          }
        }
      }
    }
  }
}
