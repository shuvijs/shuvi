{
  "name": "shuvi",
  "private": true,
  "version": "1.0.0-rc.2",
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shuvijs/shuvi.git"
  },
  "engines": {
    "node": ">=16",
    "pnpm": "=7"
  },
  "scripts": {
    "dev": "pnpm -r --stream --parallel run dev",
    "build": "pnpm -r run build",
    "clean": "pnpm -r --parallel exec rimraf node_modules lib esm shuvi-app && pnpm exec rimraf node_modules",
    "shuvi": "node ./packages/shuvi/bin/cli.js",
    "jest": "jest",
    "test": "pnpm test:unit && pnpm test:e2e",
    "test:unit": "jest ./packages",
    "test:e2e": "cross-env NODE_OPTIONS=--max_old_space_size=4096 jest --filter ./scripts/filter-e2e.js --runInBand",
    "test:e2e:express": "cross-env NODE_SERVER=EXPRESS jest test/e2e/basic --runInBand && NODE_ENV=production NODE_SERVER=EXPRESS jest test/e2e/basic --runInBand",
    "test:e2e:koa": "cross-env NODE_SERVER=KOA jest test/e2e/basic --runInBand && NODE_ENV=production NODE_SERVER=KOA jest test/e2e/basic --runInBand",
    "postinstall": "node scripts/install-native.js",
    "docs": "node scripts/typedoc-to-markdown.js",
    "release": "node scripts/release.js",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "devDependencies": {
    "@types/cross-spawn": "6.0.1",
    "@types/fs-extra": "^8.1.0",
    "@types/jest": "^25.1.3",
    "@types/node": "18.0.6",
    "@types/puppeteer-core": "^5.4.0",
    "@types/rimraf": "^3.0.0",
    "@types/send": "^0.14.5",
    "@types/webpack-env": "1.17.0",
    "chalk": "^4.1.0",
    "conventional-changelog-cli": "^2.0.31",
    "cross-env": "^7.0.3",
    "cross-spawn": "^7.0.2",
    "enquirer": "^2.3.2",
    "execa": "^4.0.2",
    "express": "^4.17.1",
    "get-port": "^5.1.1",
    "got": "^10.7.0",
    "husky": "^8.0.1",
    "is-wsl": "^2.1.1",
    "jest": "28.1.1",
    "jest-environment-jsdom": "28.1.1",
    "koa": "^2.13.1",
    "lint-staged": "^10.1.2",
    "lodash": "^4.17.15",
    "memfs": "^3.1.2",
    "minimist": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "puppeteer-core": "14.1.2",
    "rimraf": "^3.0.2",
    "sass": "1.50.1",
    "semver": "^7.3.2",
    "ts-jest": "28.0.5",
    "typedoc": "^0.22.16",
    "typedoc-plugin-markdown": "^3.12.1",
    "typedoc-plugin-missing-exports": "^0.22.6",
    "turbo": "1.3.4",
    "typescript": "4.7.4"
  }
}
