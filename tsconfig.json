{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@shuvi/toolpack/lib/*": [
        "packages/toolpack/src/*"
      ],
      "@shuvi/utils/lib/*": [
        "packages/utils/src/*"
      ],
      "@shuvi/libs/lib/*": [
        "packages/libs/src/*"
      ],
      "@shuvi/runtime-core/lib/*": [
        "packages/runtime-core/src/*"
      ],
      "@shuvi/platform-react/lib/*": [
        "packages/platform-react/src/*"
      ],
      "@shuvi/platform-mp/lib/*": [
        "packages/platform-mp/src/lib/*"
      ],
      "@shuvi/shared/lib/*": [
        "packages/shared/src/*"
      ],
      "@shuvi/router/lib/*": [
        "packages/router/src/*"
      ],
      "@shuvi/react-router/lib/*": [
        "packages/react-router/src/*"
      ],
      "@shuvi/*": [
        "packages/*/src"
      ],
      "shuvi/lib/*": [
        "packages/shuvi/src/*"
      ],
      "shuvi-test-utils": [
        "test/utils/index"
      ],
      "shuvi-test-utils/*": [
        "test/utils/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "test/fixtures"
  ]
}